- if resource.errors.any?
  #error_explanation
    - resource.errors.full_messages.each do |message|
      = render partial: 'devise/shared/desktop_error', locals: { message: message, color: 'red' }

- flash.each do |name, msg|
  - color = name == 'alert' ? 'red' : 'orange'
  #error_explanation
    - if msg.class == Array
      - msg.each do |message|
        = render partial: 'devise/shared/desktop_error', locals: { message: message, color: color }
    - else
      = render partial: 'devise/shared/desktop_error', locals: { message: msg, color: color }

