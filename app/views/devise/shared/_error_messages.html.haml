- if resource.errors.any?
  #error_explanation
    - resource.errors.full_messages.each do |message|
      = render partial: 'devise/shared/desktop_error', locals: { message: message, color: 'red' }

- flash.each do |name, msg|
  - if name == 'success'
    - color = 'green'
