%td.p-3.px-5.text-justify{class: 'w-2/3'}= post.content
%td.p-3.px-5= image_tag post.image, class: 'w-20' if post.image.attached?
%td.p-3.px-5.flex.justify-end
  - if can? :show, Post
    = button_to 'Mostrar', post_path(post), method: 'get', class: 'mr-3 text-sm bg-white hover:bg-green-300 border border-gray-500 hover:text-white hover:border-green-300 py-1 px-2 rounded focus:outline-none focus:shadow-outline'
  - if can? :edit, Post
    = button_to 'Editar', edit_post_path(post), method: 'get', class: 'mr-3 text-sm bg-white hover:bg-orange-300 border border-gray-500 hover:text-white hover:border-orange-300 py-1 px-2 rounded focus:outline-none focus:shadow-outline'
  - if can? :accept, Post
    = button_to 'Aceptar', accept_path(post), method: 'get', class: 'mr-3 text-sm bg-white hover:bg-green-300 border border-gray-500 hover:text-white hover:border-green-300 py-1 px-2 rounded focus:outline-none focus:shadow-outline'
  - if can? :reject, Post
    = button_to 'Rechazar', reject_path(post), method: 'get', class: 'mr-3 text-sm bg-white hover:bg-red-300 border border-gray-500 hover:text-white hover:border-red-300 py-1 px-2 rounded focus:outline-none focus:shadow-outline'
